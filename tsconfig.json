{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "noEmit": true,
    "lib": ["es2022"],
    "types": ["vitest/globals"]
  }
}
